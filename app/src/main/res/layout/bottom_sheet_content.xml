<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- bottom_sheet_content.xml -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/passwordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password: "
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_below="@id/emailTextView"/>
        <TextView
            android:id="@+id/namaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama: "
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_below="@id/passwordTextView"/>
        <TextView
            android:id="@+id/alamatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat: "
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_below="@id/namaTextView"/>
        <TextView
            android:id="@+id/tanggalLahirTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir: "
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_below="@id/alamatTextView"/>
        <TextView
            android:id="@+id/jenisKelaminTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin: "
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_below="@id/tanggalLahirTextView"/>


    </LinearLayout>


</RelativeLayout>